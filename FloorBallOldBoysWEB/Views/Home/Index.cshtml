@model FloorBallOldBoysWEB.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
</head>
<body>
    <div>
        <h1>Ellös OldBoys</h1>
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-antiforgery="true" action="">
            <div>
                <label asp-for="Username"></label>
                <input asp-for="Username" />
                <span asp-validation-for="Username"></span>
            </div>
            <div>
                <label asp-for="Password"></label>
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" />
                <span asp-validation-for="RememberMe"></span>
            </div>
            <div>
                <input type="submit" value="Login" asp-controller="Account" asp-action="Login" />
                <a asp-action="Register" asp-controller="Account">Skapa konto</a>
            </div>
        </form>
        
    </div>
</body>
</html>