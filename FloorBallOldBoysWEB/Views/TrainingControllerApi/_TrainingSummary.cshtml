@model  TrainingSummaryViewModel




    <section class="panel panel-primary panelTopMargin100">
        <div class="panel-heading">
            <h2>@Model.Location</h2>
            <h4>@Model.Date.DayOfWeek  @Model.StartTime.Hour:@Model.StartTime.Minute - @Model.EndTime.Hour:@Model.EndTime.Minute</h4>
            <h6>@Model.Date.Year/@Model.Date.Month/@Model.Date.Day</h6>
        </div>
        <div class="panel-body">
            <div>@Model.Info</div>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Anmälda deltagare</h4>
                </div>

                <div id="enrollment_summary_@Model.Id" class="panel-body">
                    @Html.Partial("_EnrollmentSummary", Model.EnrolledUsers)
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <table>
                <tr>
                    <th>
                        @if (Model.EnrolledUsers.Any(ute => ute.User.Email == User.Identity.Name))
                        {
                            <a id="dismiss_@Model.Id" class="btn btn-primary dismiss"
                               data-html-target="#training_summary_@Model.Id"
                               data-method="POST"
                               data-url="/api/training/dismissTraining"
                               data-model='@Json.Serialize(Model)'>Ångra anmälan</a>
                        }
                        else
                        {
                            <a id="dismiss_@Model.Id" class="btn btn-primary enroll"
                               data-html-target="#training_summary_@Model.Id"
                               data-method="POST"
                               data-url="/api/training/enrollTraining"
                               data-model='@Json.Serialize(Model)'>Kommer</a>
                        }
                    </th>
                    <th>
                        <div class="col-lg-12">
                            @if (Model.IsAdmin)
                            {
                                <a asp-action="Edit" asp-controller="Training"
                                   asp-route-trainingId="@Model.Id" asp-route-returnUrl="@Model.ReturnUrl">Ändra</a>
                                <a id="delete-training"
                                   data-html-target="#main_content"
                                   data-method="POST"
                                   data-url="/api/training/deleteTraining"
                                   data-model='{"trainingId":"@Model.Id","returnUrl":"@Model.ReturnUrl"}'>Ta bort</a>

                            }
                        </div>
                    </th>
                </tr>
            </table>
        </div>
    </section>

